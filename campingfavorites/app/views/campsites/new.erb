<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<form action="/campsites" method="post">
	<p>
		<label for "campsite[name]">Campsite name:</label>
		<input type="text" name="campsite[name]">
		</label>
	</p>
	
	<p>
		<label for "campsite[address]">Campsite address:</label>
		<input type="text" name="campsite[address]">
		</label>
	</p>
	
	<p>
		<label for "campsite[rating]">Campsite rating:</label></br>
		<% (1..5).each do |r|%>
		<input type="checkbox" name="campsite[rating]" value="<%=r%>"><%= r %></br>
		<% end %>
	</p>
	
	<button type='submit' value='create'>Create</button>
	
		

</form>
